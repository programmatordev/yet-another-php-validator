{
    "name": "programmatordev/yet-another-php-validator",
    "description": "PHP validator with expressive error messages",
    "type": "library",
    "keywords": ["PHP", "PHP8", "Validator", "Validation"],
    "license": "MIT",
    "authors": [
        {
            "name": "André Pimpão",
            "email": "a.pimpao@programmator.dev",
            "homepage": "https://programmator.dev/"
        }
    ],
    "require": {
        "php": ">=8.1",
        "egulias/email-validator": "^4.0",
        "symfony/intl": "^6.3",
        "symfony/polyfill-ctype": "^1.27",
        "symfony/polyfill-intl-grapheme": "^1.29"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/var-dumper": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "ProgrammatorDev\\Validator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProgrammatorDev\\Validator\\Test\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
